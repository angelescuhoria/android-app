    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.example.androidproject.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home" />

    <activity
        android:id="@+id/nav_register"
        android:name="com.example.androidproject.ui.register.RegisterActivity"
        android:label="@string/menu_register"
        tools:layout="@layout/activity_register" />

    <activity
        android:id="@+id/nav_login"
        android:name="com.example.androidproject.ui.login.LoginActivity"
        android:label="@string/menu_login"
        tools:layout="@layout/activity_login" />

